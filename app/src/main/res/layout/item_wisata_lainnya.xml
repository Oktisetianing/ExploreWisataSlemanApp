<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/maincard3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_container"
            android:padding="20dp">

            <ImageView
                android:id="@+id/gmbrwisata"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/candiprambanan" />

            <TextView
                android:id="@+id/tvnamawisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/gmbrwisata"
                android:text="Nama Wisata"
                android:textColor="@color/hijaubgt"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvalamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnamawisata"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/gmbrwisata"
                android:text="Alamat"
                android:textColor="@color/abuabu"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvjam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvalamat"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/gmbrwisata"
                android:text="Buka pukul"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvdeskrpsi"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/tvjam"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/gmbrwisata"
                android:text="Deskripsi"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>